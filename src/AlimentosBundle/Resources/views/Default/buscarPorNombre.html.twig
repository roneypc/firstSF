{% extends 'AlimentosBundle::layout.html.twig' %}

{% block contenido %}

<form class="w3-container" name="formBusqueda" action="{{ path('JAMAB_buscar') }}" method="POST">
  <label class="w3-label">Nombre alimento:</label>
  <input class="w3-input" type="text" name="nombre" value="{{ nombre }}">
  <p/>
  <td><input class="w3-btn w3-white w3-border w3-border-blue w3-round-xlarge" 
  type="submit" value="Buscar"></td>
</form>

{% if resultado %}
  {% include 'AlimentosBundle:Default:_tablaAlimentos.html.twig' with {'alimentos':resultado} %}
{% endif %}

{% endblock %}