{% extends 'AlimentosBundle::layout.html.twig' %}

{% block contenido %}

{% if mensaje is defined %}
    <b><span style="color: red;">{{ mensaje }}</span></b>
{% endif %}
<br/>
<form name="formInsertar" action="{{ path('JAMAB_insertar') }}" method="POST">
    <table class="w3-table w3-bordered">
        <tr class="w3-green">
            <th>Nombre</th>
            <th>Energ√≠a (Kcal)</th>
            <th>Proteina (g)</th>
            <th>H. de carbono (g)</th>
            <th>Fibra (g)</th>
            <th>Grasa total (g)</th>
        </tr>
        <tr>
            <td><input class="w3-input w3-hover-green" type="text" name="nombre" value="{{ nombre }}" /></td>
            <td><input class="w3-input w3-hover-green" type="text" name="energia" value="{{ energia }}" /></td>
            <td><input class="w3-input w3-hover-green" type="text" name="proteina" value="{{ proteina }}" /></td>
            <td><input class="w3-input w3-hover-green" type="text" name="hc" value="{{ hc }}" /></td>
            <td><input class="w3-input w3-hover-green" type="text" name="fibra" value="{{ fibra }}" /></td>
            <td><input class="w3-input w3-hover-green" type="text" name="grasa" value="{{ grasa }}" /></td>
        </tr>

    </table>
    <p/>
    <input class="w3-btn w3-white w3-border w3-border-blue w3-round-xlarge" type="submit" value="Insertar" name="insertar" />
</form>
* Los valores deben referirse a 100 g del alimento
<hr>
{% if alimento %}
  {% include 'AlimentosBundle:Default:_verAlimento.html.twig' with {'alimentos':alimento} %}
{% endif %}
{% endblock %}